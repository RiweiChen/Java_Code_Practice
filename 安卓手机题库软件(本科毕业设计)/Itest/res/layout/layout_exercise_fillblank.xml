<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/qtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="题目"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/qanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="答案"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/qdifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="难度"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/qexplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="解释"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/qsource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="题目来源："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/qmainpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="题目考点"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<EditText
        android:id="@+id/qyouanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入你的答案！" >

        <requestFocus />
    	</EditText>

 </LinearLayout>
 
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8" >
	
	 
        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一题" />

        <Button
            android:id="@+id/adderror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定" />

        <Button
            android:id="@+id/addcollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加收藏" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一题" />

    </LinearLayout>
     
    
</LinearLayout>
